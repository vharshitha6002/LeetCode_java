2428. Maximum Sum of an Hourglass
class Solution {
    public int maxSum(int[][] grid) {
    int nr = grid.length;
    int nc = grid[0].length;
    int max = 0;
    for(int i = 1;i<=nr-2;i++){
        int cs = 0;
    for(int j = 1;j<=nc-2;j++){
        cs = grid[i-1][j-1]+grid[i-1][j]+grid[i-1][j+1]+grid[i][j]+grid[i+1][j-1]+grid[i+1][j]+grid[i+1][j+1];
    if(cs>max){
        max = cs;
    }
    }
    }
return max;
}
}
